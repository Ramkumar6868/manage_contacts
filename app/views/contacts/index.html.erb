<h1>All Contacts</h1>
<table>
	<thead>
		<th>id</th>
		<th>name</th>
		<th>email</th>
	</thead>
	<% @contacts.each do |contact| %>
		<tr>
			<td><%= contact.id%></td>
			<td><%= contact.name%></td>
			<td><%= contact.email%></td>
			<td>
				<%= link_to 'Show', contact_path(contact) %>
			</td>
			<td>
				<%= link_to 'Edit', edit_contact_path(contact) %>
			</td>
			<td>
				<%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure' } %>
			</td>
		</tr>
	<% end %>
</table>